<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>
  <p class="date">
    <%= time_ago_in_words(@post.created_at) %> ago
    <% if user_signed_in? && current_user.email == @post.email %>
        | <%= link_to 'Edit', edit_post_path(@post) %>
        | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
    <% end %>
  </p>
  <hr/>
  <p class="body">
    <%= @post.body %>
  </p>
</div>